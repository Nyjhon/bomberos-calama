body
    background-color #D1CDEB
    display flex
    font-size 13px
    margin 0px
    aling-items center
    justify-content center
    margin-top 30px
.mtop16
	margin-top 16px

.box
    background-color #fff
    border-radius 8px 
    border 1px solid #d6d6d6
    position relative
    width 500px
    .btn-primary
    	background #2CB8FB
    	border 0px
    	width  100%
    .form-control
    	&:focus
    	&:active
    		outline none
    		box-shadow none
    .inside
    	padding 16px
    .header
    	background-color #65c5f2
    	border-radius 8px 8px 0px 0px
    	padding 16px
    	a
			img 
				display block
				margin 0px auto
				width 25%   
	.footer
		text-align center 
		a
			display inline-block
			font-size .9em
			&:last-child
				margin-left 24px
				
@media only screen and (max-width 720px)
	.box
		width 88%
