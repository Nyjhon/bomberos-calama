body
	background-color #D1CDEB 
	font-size 14px;
	font-family 'Roboto', sans-serif;
h2,h3,h4,h5,ul,body,html
	padding 0px
	margin 0px
a
	text-decoration none
	&:hover
		text-decoration none
.form-control
	&:focus
		box-shadow none
		outline none
.mtop16
	margin-top 16px
.mtop8
	margin-top 8px
.mb16
	margin-bottom 16px
.wrapper
	min-height 100vh
	overflow hidden
		
	.col1
		float left 
		position relative
		z-index 999
		width 17%
	.col2
		float left 
		width 83%
.sidebar
	background-color #fff 
	min-height 100vh
	.section-top
		background-color #2caaff
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
	.logo
		display block
		margin 0px auto
		padding-top 24px
		width 70%
	.user
		color #000 !important
		font-size 1.3em
		font-weight bold
		padding 8px 
		.email
			font-size 0.8em
		a
			margin-left 70px
			color red 
			font-size 1em
	.main
		display block
		margin-top 8px
		ul
			li
				margin-bottom 4px
				a
					color #000 !important
					display block
					font-size 1.1em
					padding 12px 12px
					i
						margin-right 10px
					&:hover
						background-color #2caaff
						box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
						color #fff !important
						text-decoration none
				a.active
					background-color #2caaff
					box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
					color #fff !important
					text-decoration none	
.navbar
	background-color #2caaff
	font-size 1.5em
	a
		color #000 !important
.page
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
		padding 10px
		border-radius 6px
		.breadcrumb-item
			a
				&:hover
					text-decoration none
	.panel
		background-color #fff
		border-radius 6px
		border-bottom 2px solid #2caaff
		width 100%
		.header
			border-bottom 1px solid #e8e8e8
			h2.title
				display inline-block
				color #19213d
				font-size 1.1em
				padding 12px 16px
			ul
				display inline-block
				float right
				margin-right 12px
				li
					display inline-block
					a
						display inline-block
						padding 10px
						color #333
						&:hover
							background-color #f6f6f6
							text-decoration none
							color #222
						i
							color #2caaff
					ul
						background-color #fff
						border 1px solid #f0f0f0
						display none
						float none
						position absolute
						width 160px
						li
							display inline-block
							border-bottom 1px solid #f0f0f0
							width 100%
							&:last-child
								border-bottom 0px
							a
								display block
					&:hover
						ul
							display block
		.inside
			padding 16px
			.nav
				.nav-link
					border 1px solid black
					margin-right 8px
					&:hover
						background-color #2caaff
						color #fff
			.form_buscar
				display none
				margin-bottom 16px
				.btn
					width 100%
			.big_count
				display block
				text-align center
				width 100%
				font-size 2em
			.big_count1
				padding-left 30%
				width 100%
				font-size 1em
.opts
	a
		border-radius 4px
		border 1px solid #dedede
		display inline-block
		padding 8px 12px
.page_user
	.mini_profile
		.avatar
			border-radius 50%
			width 100%
			margin 0px auto
			display block
			
		.info
			background-color #fff
			span
			
				display block
				font-size 1.1em
				width 100%
			span.title
				font-weight bold
				margin-top 16px
		.btn
			width 100%
			margin-top 16px
.page_personal
	.mini_profile
			span
				display block
				font-size 1.1em
				width 100%
			span.title
				font-weight bold
				margin-top 16px	
.bloque-img
	img
		width 100%
.cuadrado-perfecto		
	width 100%
	padding-bottom 130%
	position relative
	img 
		width 100%
		height 100%
		object-position center
		position absolute
		top 0px
		left 0px	
.ver
	padding-top 20px
	padding-left 20px
	img
		height 95%
.alert
	ul
		list-style-position inside
		margin-left 16px
.slider_content
	background-color #f9f9f9
	border-radius 4px
	padding 16px
	h2
		font-size 1.4em
		margin 0px
		padding 0px
	h1 
		font-size 1.6em
		font-weight bold
.accordion-item
	border 1px solid #2caaff
	.accordion-header
		background-color #000
		button.accordion-button
			background-color #000
			h5
				padding-left 30px
				color #fff
			
